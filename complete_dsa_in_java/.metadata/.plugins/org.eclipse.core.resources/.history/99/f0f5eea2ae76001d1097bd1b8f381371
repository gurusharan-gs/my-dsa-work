package com.questions;

public class FindMinAndSecondMin {
	
	public static int findMin(int[] arr) {
		
		int n = arr.length;
		
		int min = Integer.MAX_VALUE;
		for(int i=0; i<n; i++) {
			if(arr[i] < min) {
				min = arr[i];
			}
		}
		return min;
	}
	
	public static void main(String[] args) {
		
		int[] arr = { 1, 12, 8, 4, 1, 15, 3 };

		int res = findMin(arr);
		System.out.println(res);
		
	}

}
