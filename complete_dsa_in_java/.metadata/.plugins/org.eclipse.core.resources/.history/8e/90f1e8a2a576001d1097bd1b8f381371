package com.questions;

public class FindMaxAndSecondMax {

	public static int findMax(int[] arr) {

		int max = Integer.MIN_VALUE;

		for (int i = 0; i < arr.length; i++) {
			if (arr[i] > max) {
				max = arr[i];
			}
		}
		return max;

	}

	public static int findSecondMax(int[] arr) {

		int mx = findMax(arr);

		for (int i = 0; i < arr.length; i++) {
			if (arr[i] == mx) {
				arr[i] = Integer.MIN_VALUE;
			}
		}

		int secondMax = findMax(arr);
		return secondMax;

	}

	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	public static int findm(int[] arr) {
		
		int max = Integer.MIN_VALUE;
		int n = arr.length;
		
		for(int i=0; i<n; i++) {
			if(arr[i] > max) {
				max = arr[i];
			}
		}
		return max;
		
	}
	
	public static int findSecondM(int[] arr) {
		
		int smax = findm(arr);
		int n = arr.length;
		for(int i=0; i<n; i++) {
			if(arr[i] == smax) {
				arr[i] = Integer.MIN_VALUE;
			}
		}
		int secondm = findm(arr);
		return secondm;
		
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	public static void main(String[] args) {

		int[] arr = { 1, 12, 8, 4, 1, 15, 3 };

		int x = findSecondM(arr);
		System.out.println(x);

	}

}
